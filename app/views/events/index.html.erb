<h1>Listing events</h1>

<table>
  <tr>
    <th>Creator</th>
    <th>Category</th>
    <th>Size</th>
    <th>Date</th>
    <th>Rsvp</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.creator %></td>
    <td><%= event.category %></td>
    <td><%= event.size %></td>
    <td><%= event.date %></td>
    <td><%= event.rsvp %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

